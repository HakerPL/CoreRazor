@model Author
@{
    ViewData["Title"] = "Info";
}

<div class="row orderForm">
    <h3 class="col-md-offset-2">Create new author</h3>
    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label"></label>
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="col-md-2 control-label"></label>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.BornDate, htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
</div>