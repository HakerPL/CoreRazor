@model Author
@{
    int bookCount = Model.Books?.Count ?? 0;
}

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <p>@Model.Name @Model.Surname</p>
        </div>
        <div class="panel-body">
            <h2>Book count: @bookCount</h2>
            <div class="btn-group">
                <a class="btn btn-info" asp-area="" asp-controller="Author" asp-action="Info" asp-route-id="@Model.Id">Info</a>
                <a class="btn btn-info" asp-area="" asp-controller="Author" asp-action="Update" asp-route-id="@Model.Id">Edit</a>
                <a class="btn btn-danger" asp-area="" asp-controller="Author" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
            </div>
        </div>
    </div>
</div>